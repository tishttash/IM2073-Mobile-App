<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Score: "
            android:textColor="#332FA2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="Insert Timer"
            android:textColor="#332FA2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/fetchdb"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="82dp"
            android:layout_marginEnd="65dp"
            android:layout_toStartOf="@+id/textView"
            android:layout_toEndOf="@+id/textView2"
            android:onClick="btnConn"
            android:text="F" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="146dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgpurple"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="311dp"
            android:layout_height="102dp"
            android:lineSpacingExtra="6dp"
            android:text="Question"
            android:textAlignment="center"
            android:textColor="#332FA2"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/choice1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="choice1"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/bgbtn"
        android:layout_width="325dp"
        android:layout_height="70dp" />


    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/choice2"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="choice2"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/bgbtn"
        android:layout_width="325dp"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/choice3"
        android:layout_width="325dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgbtn"
        android:paddingBottom="10dp"
        android:text="choice3"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/choice4"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="choice4"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/bgbtn"
        android:layout_width="325dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:textAlignment="center"
            android:id="@+id/questionTracker"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:lineSpacingExtra="6dp"
            android:layout_height="wrap_content"
            android:text="counter" />

    </LinearLayout>

</LinearLayout>

