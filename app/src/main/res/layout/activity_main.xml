<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textScreen"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textColor="#332FA2"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bird Trivia" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bgpurple"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="360dp"
        android:layout_height="180dp">

        <TextView
            android:textAlignment="center"
            android:id="@+id/textQuestion"
            android:textColor="#332FA2"
            android:textSize="26sp"
            android:layout_width="320dp"
            android:lineSpacingExtra="6dp"
            android:layout_height="wrap_content"
            android:text="Insert Question" />

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/editText"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="choice1"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/bgbtn"
        android:layout_width="325dp"
        android:layout_height="70dp" />


    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/editText2"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="choice2"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/bgbtn"
        android:layout_width="325dp"
        android:layout_height="70dp" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/editText3"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="choice3"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/bgbtn"
        android:layout_width="325dp"
        android:layout_height="70dp" />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/editText4"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="choice4"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/bgbtn"
        android:layout_width="325dp"
        android:layout_height="70dp" />

</LinearLayout>